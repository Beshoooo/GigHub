@model IEnumerable<GigHub.Models.Gigs>
@{
    ViewBag.Title = "Home Page";
}

<ul class="comming_gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.Datatime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.Datatime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                </span>
                <span class="genre">
                    @gig.Genre.Name
                </span>
            </div>

        </li>

    }
</ul>